<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="?attr/menuBackground"
            android:id="@+id/menu_one">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈添"
                android:textColor="?attr/menuTextColor"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="?attr/menuBackground"
                android:id="@+id/menu_text_one"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hot_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="?attr/menuBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/hot"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="热门"
                    android:textColor="?attr/menuTextColor"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="?attr/menuBackground"
                    android:id="@+id/menu_text_two"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="?attr/menuBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/about"/>

                <TextView
                    android:id="@+id/menu_text_three"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="关于"
                    android:textColor="?attr/menuTextColor"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="?attr/menuBackground"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="?attr/menuBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/setting"/>

                <TextView
                    android:id="@+id/menu_text_four"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="?attr/menuTextColor"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="?attr/menuBackground"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/menuBackgroundDark"
        android:padding="15dp"
        android:orientation="horizontal"
        android:id="@+id/goto_home">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/menuBackgroundDark"
            android:id="@+id/menu_layout_one">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/homepage"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="首页"
                android:textColor="?attr/menuTextColor"
                android:background="?attr/menuBackgroundDark"
                android:id="@+id/menu_text_five"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_layout_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/menuBackgroundDark">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/arrows"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/recycler_menu">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/menu_layout_three"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/menuBackgroundDark"
            android:padding="15dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/menu_layout_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="?attr/menuBackgroundDark">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/download"/>

                <TextView
                    android:id="@+id/menu_text_six"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="完成"
                    android:textColor="?attr/menuTextColor"
                    android:background="?attr/menuBackgroundDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/day_night_mode"
                android:background="?attr/menuBackgroundDark">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dark"
                    android:id="@+id/day_night_img"
                    />

                <TextView
                    android:id="@+id/menu_text_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="夜间"
                    android:textColor="?attr/menuTextColor"
                    android:background="?attr/menuBackgroundDark"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>