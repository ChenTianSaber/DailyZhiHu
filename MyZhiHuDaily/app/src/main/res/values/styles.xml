<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--白天主题-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@android:color/white</item>
        <!--<item name="colorBackground">@color/colorPrimary</item>-->
        <item name="colorTextColor">@android:color/black</item>
        <item name="menuTextColor">@android:color/white</item>
        <item name="menuBackground">@color/colorPrimary</item>
        <item name="menuBackgroundDark">@color/colorPrimaryDark</item>
        <item name="lineColor">@color/colorLine</item>
    </style>

    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color3F3F3F</item>
        <item name="colorPrimaryDark">@color/color3A3A3A</item>
        <item name="colorAccent">@color/color868686</item>
        <item name="colorBackground">@color/color3F3F3F</item>
        <item name="colorTextColor">@color/color8A9599</item>
        <item name="menuTextColor">@color/color8A9599</item>
        <item name="menuBackground">@color/color3F3F3F</item>
        <item name="menuBackgroundDark">@color/color3A3A3A</item>
        <item name="lineColor">@color/color8A9599</item>
    </style>

</resources>
